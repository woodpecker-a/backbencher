@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="STC&S Smart Study." />
    <meta name="author" content="woodpecker-a" />
    <link rel="icon"
          href="~/theme/assets/images/favicon.png"
          type="image/x-icon" />
    <link rel="shortcut icon"
          href="~/theme/assets/images/favicon.png"
          type="image/x-icon" />
    <title>STC&S</title>
    <!-- Google font-->
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&amp;display=swap"
          rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&amp;display=swap"
          rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Rubik:ital,wght@0,400;0,500;0,600;0,700;0,800;0,900;1,300;1,400;1,500;1,600;1,700;1,800;1,900&amp;display=swap"
          rel="stylesheet" />
    <!-- Font Awesome-->
    <link rel="stylesheet"
          type="text/css"
          href="~/theme/assets/css/fontawesome.css" />
    <!-- ico-font-->
    <link rel="stylesheet" type="text/css" href="~/theme/assets/css/icofont.css" />
    <!-- Themify icon-->
    <link rel="stylesheet" type="text/css" href="~/theme/assets/css/themify.css" />
    <!-- Flag icon-->
    <link rel="stylesheet" type="text/css" href="~/theme/assets/css/flag-icon.css" />
    <!-- Feather icon-->
    <link rel="stylesheet"
          type="text/css"
          href="~/theme/assets/css/feather-icon.css" />
    <!-- Plugins css start-->
    <!-- Plugins css Ends-->
    <!-- Bootstrap css-->
    <link rel="stylesheet" type="text/css" href="~/theme/assets/css/bootstrap.css" />
    <!-- App css-->
    <link rel="stylesheet" type="text/css" href="~/theme/assets/css/style.css" />
    <link id="color"
          rel="stylesheet"
          href="~/theme/assets/css/color-1.css"
          media="screen" />
    <!-- Responsive css-->
    <link rel="stylesheet"
          type="text/css"
          href="~/theme/assets/css/responsive.css" />
</head>

<body>
    <!-- page-wrapper Start-->
    <section>
        <div class="container-fluid p-0">
            <div class="row">
                <div class="col-12">
                    <div class="login-card">
                        <form id="account" method="post" class="theme-form login-form">
                            <h4>Login</h4>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <h6>Welcome back! Log in to your account.</h6>
                            <div class="form-group">
                                <label>Email Address</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="icon-email"></i>
                                    </span>
                                    <input class="form-control"
                                           asp-for="Email"
                                           type="email"
                                           aria-required="true"
                                           placeholder="example@email.com" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Password</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="icon-lock"></i>
                                    </span>
                                    <input class="form-control"
                                           asp-for="Password"
                                           type="password"
                                           aria-required="true"
                                           placeholder="*********" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="checkbox">
                                    <input asp-for="RememberMe" type="checkbox" />
                                    <label>Remember password</label>
                                </div>
                                <a class="link" asp-area="" asp-controller="Account" asp-action="ForgotPassword">Forgot password?</a>
                            </div>
                            <div class="form-group">
                                <button id="login-submit" class="btn btn-primary btn-block" type="submit">
                                    Sign in
                                </button>
                            </div>
                            <p>
                                <a class="ms-2" asp-area="" asp-controller="Account" asp-action="Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                            </p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- page-wrapper end-->
    <!-- latest jquery-->
    <script src="~/theme/assets/js/jquery-3.5.1.min.js"></script>
    <!-- feather icon js-->
    <script src="~/theme/assets/js/icons/feather-icon/feather.min.js"></script>
    <script src="~/theme/assets/js/icons/feather-icon/feather-icon.js"></script>
    <!-- Sidebar jquery-->
    <script src="~/theme/assets/js/sidebar-menu.js"></script>
    <script src="~/theme/assets/js/config.js"></script>
    <!-- Bootstrap js-->
    <script src="~/theme/assets/js/bootstrap/popper.min.js"></script>
    <script src="~/theme/assets/js/bootstrap/bootstrap.min.js"></script>
    <!-- Plugins JS start-->
    <!-- Plugins JS Ends-->
    <!-- Theme js-->
    <script src="~/theme/assets/js/script.js"></script>
    <!-- login js-->
    <!-- Plugin used-->
</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
