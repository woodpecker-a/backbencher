@model InstructorListModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <!-- Zero Configuration  Starts-->
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header">
                <h5>Instructor List</h5><span>Hounerable Instructors.</span>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="display" id="instructors">
                        <thead>
                            <tr>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Id Initial</th>
                                <th>Id No</th>
                                <th>Rank</th>
                                <th>Course</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Id Initial</th>
                                <th>Id No</th>
                                <th>Rank</th>
                                <th>Course</th>
                                <th>Action</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- Zero Configuration  Ends-->
</div>

@section Scripts
{
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
    <script>
        $(function () {
          $('#instructors').DataTable({
              "processing": true,
              "serverSide": true,
              "ajax": {
                "url": "/Instructor/GetInstructors",
                "type": "Get"
              },
              "columnDefs": [
                  {
                      "orderable": false,
                      "targets": 5,
                      "render": function (data, type, row) {
                          return `<button type="submit" class="btn btn-info btn-sm" onclick="window.location.href='/Instructor/edit/${data}'" value='${data}'>
                                      <i class="fas fa-pencil-alt">
                                      </i>
                                      Edit
                                  </button>
                                  <button type="submit" class="btn btn-danger btn-sm show-bs-modal" data-id='${data}' value='${data}'>
                                      <i class="fas fa-trash">
                                      </i>
                                      Delete
                                  </button>`;
                      }
                  }
              ]
          });

          $('#courses').on('click', '.show-bs-modal', function (event) {
              var id = $(this).data("id");
              var modal = $("#modal-default");
              modal.find('.modal-body p').text('Are you sure you want to delete this record?');
              $("#deleteId").val(id);
              $("#deleteForm").attr("action", "/Instructor/delete");
              modal.modal('show');
          });

          $("#deleteButton").click(function () {
              $("#deleteForm").submit();
          });

        });
    </script>
}

